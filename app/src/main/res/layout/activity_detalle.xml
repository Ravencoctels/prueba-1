<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalle">

    <TextView
        android:id="@+id/textView"
        android:layout_width="987dp"
        android:layout_height="337dp"
        android:layout_marginTop="4dp"
        android:text="Nuestra Hamburguesa Deluxe es una obra maestra culinaria. Comienza con una jugosa hamburguesa de carne de res a la parrilla, cubierta con queso cheddar derretido, lechuga, tomate y cebolla morada. La salsa secreta y el panecillo tostado completan esta experiencia gourmet."
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_1_1" />

    <ImageButton
        android:id="@+id/ib_1_1"
        android:layout_width="1268dp"
        android:layout_height="353dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/burger" />
</androidx.constraintlayout.widget.ConstraintLayout>